/* miniprogram/pages/AI-picture/AI-picture.wxss */
.img-container{
  width: 100%;
  height: 400rpx;
}
.img-container image {
  width: 100%;
  height: 100%;
}
.ai-item-container{
  padding: 20rpx;
  background: rgb(174, 216, 140);
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.ai-item{
  width: 340rpx;
  height: 340rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.ai-item-img{
  width: 280rpx;
  height: 160rpx;
  background-color: blue;
  margin: 20rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ai-item-img image{
  width: 200rpx;
  height: 120rpx;
}
.ai-item-name{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: rgb(231, 80, 80);
  text-align: center;
  margin: 0 auto;
}